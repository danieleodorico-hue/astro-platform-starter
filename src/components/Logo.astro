---
const brand = "<DO_>";
---

<a href="/" class="inline-flex items-center select-none">
  <span class="font-orbitron text-[#00bcd4] text-xl sm:text-2xl tracking-widest relative">
    &lt;DO<span class="blinking-underscore text-[#d16ba5]">_</span>&gt;
  </span>
</a>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@600;700&display=swap');

  .font-orbitron {
    font-family: 'Orbitron', sans-serif;
  }

  .blinking-underscore {
    display: inline-block;
    animation: blink 1.1s steps(2, start) infinite;
  }

  @keyframes blink {
    to {
      visibility: hidden;
    }
  }
</style>
