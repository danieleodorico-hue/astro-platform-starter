---
import Layout from '../../layouts/Layout.astro';

import '../../styles/blog.scss';

export const frontmatter = {
    title: 'TITLE',
    date: 'YYYY-MM-DD',
    description: 'DESCRIPTION',
    tags: ['tag1', 'tag2', 'tag3'],
    category: 'category',
    icon: 'Icon'
};
---

<Layout title={frontmatter.title}>
    <section class="mb-12 sm:mb-20 max-w-4xl mx-auto">
        <!-- Titolo e data -->
        <h1 class="text-3xl sm:text-4xl font-bold text-[#f2f2f2] mb-3">{frontmatter.title}</h1>
        <p class="text-sm text-[#999] mb-8">
            {
                new Date(frontmatter.date).toLocaleDateString('it-IT', {
                    day: '2-digit',
                    month: 'long',
                    year: 'numeric'
                })
            }
        </p>

        <div class="text-[#b8b8b8] leading-relaxed text-justify space-y-5">
            <p>Paragrafo 1.</p>

            <p>Paragrafo 2.</p>

            <p>Paragrafo 3.</p>
        </div>

        <div class="video-wrapper mt-6">
            <iframe
                src="https://www.youtube.com/embed/w9KfvvdE4IE"
                title="TITLE"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
                loading="lazy"
            >
            </iframe>
        </div>
    </section>
</Layout>

