---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blogs');

const tagCount = {};
posts.forEach((p) => {
    [...(p.data.tags || []), ...(p.data.extratags || [])].forEach((t) => {
        tagCount[t] = (tagCount[t] || 0) + 1;
    });
});

const allTags = Object.keys(tagCount).sort((a, b) => b.localeCompare(a));
---

<Layout title="Tutti i tag">
    <section class="max-w-4xl mx-auto mb-16">
        <h1 class="text-3xl font-bold text-[#f2f2f2] mb-8">Tutti i tag</h1>
        <div class="flex flex-wrap gap-3">
            {
                allTags.map((tag) => (
                    <a href={`/tags/${tag.toLowerCase()}`} class="tag">
                        #{tag}
                    </a>
                ))
            }
        </div>
        <div class="flex flex-wrap gap-3">
            {
                Object.entries(tagCount).map(([tag, count]) => (
                    <a href={`/tags/${tag.toLowerCase()}`} class="tag">
                        #{tag} <span class="count">({count})</span>
                    </a>
                ))
            }
        </div>
    </section>

    <style>
        .tag {
            font-family: 'JetBrains Mono', monospace;
            color: #00bcd4;
            background: rgba(255, 255, 255, 0.06);
            padding: 0.25rem 0.6rem;
            border-radius: 0.35rem;
            transition: all 0.2s ease;
            text-decoration: none;
        }
        .tag:hover {
            color: #d16ba5;
            background: rgba(255, 255, 255, 0.12);
        }
        .count {
            font-size: 0.8em;
            color: #777;
            margin-left: 0.2em;
        }
    </style>
</Layout>
