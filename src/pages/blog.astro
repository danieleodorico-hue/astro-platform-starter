---
import Layout from '../layouts/Layout.astro';

// Importa le icone disponibili (aggiungine altre se servono)
import { PenTool, Globe, Trophy, Volleyball, BookOpen, Code, FileText, Rocket, Cpu, Newspaper } from 'lucide-astro';

// Mappa nome → icona
const iconMap = {
    PenTool,
    Globe,
    Trophy,
    Volleyball,
    BookOpen,
    Code,
    Rocket,
    Cpu,
    Newspaper,
    FileText // fallback
};

// Carica tutti i post .astro dalla cartella /blogs
interface BlogPost {
    frontmatter: {
        title: string;
        date: string;
        description: string;
        tags?: string[];
        icon?: string;
    };
    url: string;
}

const posts = (await Astro.glob<BlogPost>('../pages/blogs/*.astro')).sort(
    (a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);

// Estrai tutti i tag unici
const allTags = [...new Set(posts.flatMap((p) => p.frontmatter.tags || []))];
---

<Layout title="Blog — Daniele Odorico">
    <section class="mb-12 sm:mb-20 max-w-7xl mx-auto">
        <!-- Titolo + conteggio -->
        <h1 class="text-4xl sm:text-5xl font-bold leading-tight mb-3 text-[#f2f2f2]">Blog</h1>
        <p class="text-[#b8b8b8] mb-8">{posts.length} articoli pubblicati</p>

        <!-- Filtro per tag -->
        {
            allTags.length > 0 && (
                <div class="mb-10 flex flex-wrap gap-3">
                    <button class="tag active" data-tag="all">
                        #tutti
                    </button>
                    {allTags.map((tag) => (
                        <button class="tag" data-tag={tag}>
                            #{tag}
                        </button>
                    ))}
                </div>
            )
        }

        <!-- Griglia dei post -->
        <div id="post-grid" class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {
                posts.map((post) => {
                    const { title, date, description, tags = [], icon } = post.frontmatter;
                    const IconComponent = iconMap[icon] || FileText;

                    return (
                        <article class="card" data-tags={tags.join(',')}>
                            <div class="icon-wrapper mb-4">
                                <IconComponent class="icon-large" />
                            </div>

                            <h3 class="card-title">{title}</h3>
                            <p class="text-sm text-[#999] mb-3">{new Date(date).toLocaleDateString('it-IT')}</p>

                            <p class="card-body">{description}</p>

                            <div class="flex flex-wrap gap-2 mt-3">
                                {tags.map((tag) => (
                                    <span class="tag-mini">{`#${tag}`}</span>
                                ))}
                            </div>

                            <a href={post.url} class="card-link mt-3 inline-block">
                                Leggi l'articolo
                            </a>
                        </article>
                    );
                })
            }
        </div>
    </section>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const buttons = document.querySelectorAll('button.tag') as NodeListOf<HTMLButtonElement>;
            const posts = document.querySelectorAll('#post-grid article') as NodeListOf<HTMLElement>;

            buttons.forEach((btn) => {
                btn.addEventListener('click', () => {
                    const selected = btn.dataset.tag;

                    buttons.forEach((b) => b.classList.remove('active'));
                    btn.classList.add('active');

                    posts.forEach((post) => {
                        const tags = post.dataset.tags?.split(',') || [];
                        post.style.display = selected === 'all' || tags.includes(selected) ? 'block' : 'none';
                    });
                });
            });
        });
    </script>

    <style>
        /* TAG filtro */
        .tag {
            font-family: 'JetBrains Mono', ui-monospace, SFMono-Regular, Menlo, monospace;
            color: #d16ba5;
            background: rgba(255, 255, 255, 0.06);
            padding: 0.3rem 0.6rem;
            border-radius: 0.4rem;
            border: 1px dashed rgba(209, 107, 165, 0.4);
            cursor: pointer;
            transition: all 0.2s ease;
            text-transform: lowercase;
        }
        .tag:hover {
            color: #00bcd4;
            border-color: rgba(0, 188, 212, 0.6);
        }
        .tag.active {
            background: rgba(209, 107, 165, 0.15);
            color: #00bcd4;
            border-color: rgba(0, 188, 212, 0.6);
        }

        /* TAG nei post */
        .tag-mini {
            font-family: 'JetBrains Mono', ui-monospace, SFMono-Regular, Menlo, monospace;
            font-size: 0.8rem;
            color: #00bcd4;
            background: rgba(255, 255, 255, 0.04);
            padding: 0.15rem 0.35rem;
            border-radius: 0.35rem;
        }

        /* CARD POST */
        .card {
            background: rgba(0, 0, 0, 0.45);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 14px;
            padding: 1.4rem;
            transition:
                border-color 0.2s,
                box-shadow 0.2s,
                transform 0.15s;
        }
        .card:hover {
            border-color: rgba(209, 107, 165, 0.5);
            box-shadow: 0 0 18px rgba(209, 107, 165, 0.2);
            transform: translateY(-2px);
        }

        .card-title {
            font-weight: 700;
            color: #f2f2f2;
        }

        .card-body {
            color: #bfbfbf;
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
        }

        .card-link {
            color: #d16ba5;
            text-decoration: none;
            border-bottom: 1px dashed rgba(209, 107, 165, 0.5);
            transition:
                color 0.2s ease,
                border-color 0.2s ease;
        }
        .card-link:hover {
            color: #00bcd4;
            border-bottom-color: rgba(0, 188, 212, 0.7);
        }

        /* Glow sull'icona dentro la card */
        .icon-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        .icon-large {
            width: 15%;
            max-width: 64px;
            height: auto;
            color: #d16ba5;
            opacity: 0.9;
            transition:
                transform 0.3s ease,
                opacity 0.3s ease,
                filter 0.3s ease;
        }

        /* Effetto glow al passaggio del mouse */
        .card:hover .icon-large {
            transform: scale(1.2);
            opacity: 1;
        }
    </style>
</Layout>
